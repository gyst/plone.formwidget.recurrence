<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Lines Widgets -->

    <div metal:define-macro="edit">
      <div tal:replace="structure context/@@recurrence_tmpl" />
      <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery('.ArchetypesRecurrenceWidget textarea').recurrenceinput();
        });
      </script>
      <div metal:use-macro="field_macro | context/widgets/field/macros/edit">
          <div metal:fill-slot="widget_body">
              <textarea tal:attributes="name string:$fieldName;
                                        id fieldName;
                                        cols widget/cols;
                                        rows widget/rows;"
                        tal:content="python:value or ''"></textarea>
          </div>
      </div>
    </div>

  </body>

</html>

