<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone.formwidget.recurrence">
  <head><title></title></head>
  <body>

    <!-- Lines Widgets -->
    <metal:view_macro define-macro="view"
      tal:define="visState python:widget.isVisible(here, mode);
        getMethod python:(widget.populate and accessor) or None;
        value python:getMethod and getMethod();
        widget_view widget/@@recurrence_widget;">
        <span tal:content="python:widget.get_formatted_value(value)">Value</span>
    </metal:view_macro>

    <div metal:define-macro="edit">
      <metal:use use-macro="field_macro | context/widgets/field/macros/edit">

        <div metal:fill-slot="widget_body">
    
          <script id="jquery-recurrenceinput-display-tmpl" type="text/x-jquery-tmpl"
            tal:attributes="src string:${context/@@plone_portal_state/portal_url}/++resource++jquery.recurrenceinput.display.js" ></script>
          <script id="jquery-recurrenceinput-form-tmpl" type="text/x-jquery-tmpl"
            tal:attributes="src string:${context/@@plone_portal_state/portal_url}/++resource++jquery.recurrenceinput.form.js" ></script>
          <textarea tal:attributes="name string:$fieldName;
                                    id fieldName;
                                    cols widget/cols;
                                    rows widget/rows;"
                    tal:content="python:value or ''"></textarea>
          <!-- Make the text area a recurrenceinput -->
          <script type="text/javascript"
                  tal:content="string: $.tools.recurrenceinput.localize('${request/LANGUAGE}', ${widget/@@recurrence_widget/i18n_setup});
                                       jQuery('.ArchetypesRecurrenceWidget textarea').recurrenceinput({lang: '${request/LANGUAGE}'});">
          </script>
        </div>
      </metal:use>
    </div>

  </body>

</html>
